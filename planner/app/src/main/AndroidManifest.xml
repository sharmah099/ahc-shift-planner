<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androidessence.planner">

    <application
        android:name="androidessence.comman.MainApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_timer"
        android:label="@string/app_name"
        android:theme="@style/Theme.Nomad">
        <activity
            android:name="androidessence.planner.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="androidessence.planner.CalenerActivity"
            android:theme="@style/Theme.Nomad.NoTitleNoActionBar" />

        <activity
            android:name="androidessence.planner.ScrollerActivity"
            android:theme="@style/Theme.Nomad.NoTitleNoActionBar" />

        <activity
            android:name=".EditSessionLengthActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".StartNewShiftDialogActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".AddToShiftDialogActivity"
            android:theme="@style/AppTheme.Dialog" />

        <activity
            android:name=".JobOverviewActivity"
            android:theme="@style/AppTheme.Dialog" />

        <activity
            android:name=".FinalTimeActivity"
            android:theme="@style/AppTheme.Dialog" />

        <activity
            android:name=".HourActivity"
            android:theme="@style/AppTheme.Dialog" />

        <activity android:name=".PeriodActivity"
        android:theme="@style/AppTheme.Dialog" />


        <activity android:name="androidessence.planner.StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>