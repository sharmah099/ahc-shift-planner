<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/primary_blue_disabled" android:state_enabled="false" />

    <item android:drawable="@color/primary_blue_down" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/primary_blue" />
            <gradient android:angle="-90" android:startColor="@color/primary_blue" />
        </shape>
    </item>

    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/primary_blue" />
            <solid android:color="@color/primary_blue" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/primary_blue" />
            <gradient android:angle="-90" android:endColor="@color/primary_blue" android:startColor="@color/primary_blue" />
        </shape>
    </item>
    <!--<item-->
    <!--android:drawable="@color/primary_blue"/>-->
</selector>
