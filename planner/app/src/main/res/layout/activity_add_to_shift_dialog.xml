<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToShiftDialogActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dialog_margin"
        android:layout_marginStart="@dimen/dialog_margin"
        android:background="@drawable/dialog_background"
        android:transitionName="@string/transition_dialog"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            style="@style/Text.XLarge.Bold"
            android:text="@string/heading"/>
        <TextView
            style="@style/Text.Medium"
            android:textColor="@color/text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_info"/>
        <TextView
            android:paddingTop="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text.Medium"
            android:textColor="@color/text_secondary"
            android:text="@string/text_next"/>
        <Button
            android:id="@+id/btn_add_shift"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:gravity="center"
            android:stateListAnimator="@animator/raised_button"
            android:text="Add to Shift"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textColor="@color/primary_blue"
            style="@style/Text.Medium"
            android:layout_gravity="bottom|right"
            android:text="CANCEL"/>

        </LinearLayout>

</FrameLayout>
