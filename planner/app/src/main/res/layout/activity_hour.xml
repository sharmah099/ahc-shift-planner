<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HourActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dialog_margin"
        android:layout_marginStart="@dimen/dialog_margin"
        android:background="@drawable/dialog_background"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:transitionName="@string/transition_dialog">


        <TextView
            style="@style/Text.XLarge.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_narrow"
            android:text="Select Hour" />

        <Button
            android:id="@+id/btn_11"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@animator/raised_button"
            android:text="09:00" />

        <Button
            android:id="@+id/btn_12"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="@dimen/padding_narrow"
            android:stateListAnimator="@animator/raised_button"
            android:text="10:00" />

        <Button
            android:id="@+id/btn_13"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="@dimen/padding_narrow"
            android:stateListAnimator="@animator/raised_button"
            android:text="11:00" />

        <Button
            android:id="@+id/btn_14"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="@dimen/padding_narrow"
            android:stateListAnimator="@animator/raised_button"
            android:text="12:00" />

        <TextView
            android:id="@+id/tv_bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="-10dp"
            android:drawableStart="@mipmap/ic_back"
            android:gravity="center"
            android:paddingLeft="-10dp"
            android:paddingTop="@dimen/padding_narrow"
            android:text="Back"
            android:textColor="@color/primary_blue" />


    </LinearLayout>
</FrameLayout>
