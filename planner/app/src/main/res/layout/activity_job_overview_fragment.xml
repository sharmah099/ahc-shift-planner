<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dialog_margin"
        android:layout_marginStart="@dimen/dialog_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dialog_background"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:elevation="@dimen/dialog_elevation"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:transitionName="@string/transition_dialog">

        <!--<ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbarAlwaysDrawVerticalTrack="true">
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/padding"
                android:paddingTop="@dimen/padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/tv_firstname"
                        style="@style/Text.Large.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baverstock,"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/tv_lastname"
                        style="@style/Text.Large.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Christian" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="@dimen/expandableListDividerHeight">

                        <TextView
                            android:id="@+id/tv_gender"
                            style="@style/Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female   "
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_dob"
                            style="@style/Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30-May-1980 (36 y)"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_nhs"
                            style="@style/Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NHS:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_nhsnumber"
                            style="@style/Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="111 111 1111"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_narrow">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_time"
                                style="@style/Text.Super_XLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="09:00" />

                            <TextView
                                android:id="@+id/tv_hrs"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/padding_narrow"
                                android:text="0hrs/30mins"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical|center_horizontal"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/padding">

                            <ImageView
                                android:id="@+id/img_ack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:paddingRight="@dimen/padding_eextra_wide"
                                android:src="@mipmap/ic_action_status_acknowledged" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Acknowledged"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/padding">

                    <LinearLayout
                        android:id="@+id/ll_job_priority"
                        android:layout_width="@dimen/client_details_icon_size"
                        android:layout_height="@dimen/client_details_icon_size"
                        android:orientation="horizontal" />

                    <TextView
                        style="@style/Text.Large.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:paddingLeft="@dimen/padding_eextra_wide"
                        android:text="Initial Assessment" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_status"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/ll_nav_height"
                    android:layout_marginRight="@dimen/ll_nav_height"
                    android:layout_marginTop="@dimen/padding_narrow"
                    android:gravity="center"
                    android:stateListAnimator="@animator/raised_button"
                    android:text="Open Visit" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/padding_eextra_wide"
                    android:layout_marginTop="10dp"
                    android:text="07970 123456" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/padding_eextra_wide"
                    android:text="12 Street Road, SW14 9TY" />

                <TextView
                    android:id="@+id/tv_info"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/padding_eextra_wide"
                    android:paddingRight="@dimen/padding_eextra_wide"
                    android:text="Access information like - key code is 1234 or there is a big dog that jumps up at you."
                    android:textColor="@color/text_secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/padding_narrow"
                        android:src="@mipmap/ic_action_phone" />

                    <ImageView
                        android:id="@+id/img_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/padding_narrow"
                        android:src="@mipmap/ic_message_blue" />

                    <ImageView
                        android:id="@+id/img_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/padding_narrow"
                        android:src="@mipmap/ic_map" />

                    <ImageView
                        android:id="@+id/img_nav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/padding_narrow"
                        android:src="@mipmap/ic_navigation" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_spl_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:src="@drawable/ic_alert_spl_info" />

        </LinearLayout>

        <!--  </ScrollView>-->
    </LinearLayout>

</RelativeLayout>
