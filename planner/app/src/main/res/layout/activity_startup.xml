<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_startup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidessence.planner.StartupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/padding_extra_narrow"
        android:background="@color/primary_blue"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:paddingLeft="@dimen/padding_extra_wide"
        app:theme="@style/ToolBarStyle"
        app:logo="@mipmap/ic_menu_white_24dp"
        app:titleMarginStart="@dimen/padding_extra_wide"
        app:title="Shift"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:alpha="100"
                android:src="@drawable/ic_location" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/padding_xxextra_wide"
                android:text="@string/start_new_shift"
                style="@style/Text.XLarge"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/padding_xxextra_wide"
                style="@style/Text"
                android:text="@string/Message"
                android:maxLines="4"/>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/bt_start_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:layout_marginRight="@dimen/ll_nav_height"
                android:layout_marginLeft="@dimen/ll_nav_height"
                android:stateListAnimator="@animator/raised_button"
                android:text="@string/start_shift"
                style="@style/Button"/>

            <TextView
                android:id="@+id/tv_visit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Text"
                android:paddingTop="@dimen/padding_xxextra_wide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Text"
                android:paddingTop="@dimen/padding_xxextra_wide"
                android:text="@string/time_period" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
          android:paddingTop="@dimen/padding">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/expandableListDividerHeight"
                android:paddingRight="@dimen/padding_eextra_wide"
                android:src="@mipmap/ic_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:stateListAnimator="@animator/raised_button" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/expandableListDividerHeight"
                android:gravity="center"
                style="@style/Text.XLarge"/>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:padding="@dimen/expandableListDividerHeight"
                android:src="@mipmap/ic_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:stateListAnimator="@animator/raised_button" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="hours"
            style="@style/Text.Medium"/>
    </LinearLayout>
</LinearLayout>
