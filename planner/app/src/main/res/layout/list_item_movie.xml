<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Large.Bold" />

            <TextView
                android:paddingTop="@dimen/padding_extra_narrow"
                android:id="@+id/tv_hour_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0hr/30mi"
                style="@style/Text"
                android:textColor="@color/text_secondary"/>

            <ImageView
                android:paddingTop="@dimen/padding_extra_narrow"
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Text.Large.Bold"/>


                <TextView
                    android:paddingRight="@dimen/padding_extra_narrow"
                    android:id="@+id/add_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="Set ETA"
                    android:textColor="@color/primary_blue"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_client_name_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Medium"
                android:textColor="@color/text_secondary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingRight="@dimen/padding_extra_narrow"
                    android:id="@+id/tv_client_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:paddingLeft="@dimen/padding_extra_narrow"
                    android:id="@+id/tv_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_narrow"
                android:paddingTop="@dimen/padding_narrow">

                <TextView
                    android:paddingBottom="@dimen/padding_narrow"
                    android:paddingTop="@dimen/padding_narrow"
                    android:paddingRight="@dimen/padding_medium"
                    android:paddingLeft="@dimen/padding_medium"
                    android:id="@+id/tv_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="R"
                    android:textColor="@color/white"
                    android:background="@color/green_light"/>

                <TextView
                    android:paddingLeft="@dimen/padding_extra_narrow"
                    android:layout_gravity="center"
                    android:id="@+id/tv_job_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>