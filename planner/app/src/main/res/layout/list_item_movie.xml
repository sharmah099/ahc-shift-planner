<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/padding_medium"
    android:paddingTop="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                style="@style/Text.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_hour_minute"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_extra_narrow"
                android:text="0hr/30mi"
                android:textColor="@color/text_secondary" />

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_extra_narrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_client_name"
                style="@style/Text.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tv_client_name_last"
                style="@style/Text.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_client_gender"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_dob"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green_light"
                    android:paddingBottom="@dimen/padding_narrow"
                    android:paddingLeft="@dimen/padding_narrow"
                    android:paddingRight="@dimen/padding_narrow"
                    android:paddingTop="@dimen/padding_narrow"
                    android:text="R"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_action"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/padding_extra_narrow"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_eta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_time"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="Set ETA"
                android:paddingLeft="@dimen/padding_medium"
                android:textColor="@color/primary_blue" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
