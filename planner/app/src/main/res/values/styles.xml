    <style name="Text.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:drawableBottom">@drawable/title_underline</item>
        <item name="android:drawablePadding">@dimen/padding_extra_narrow</item>
        <item name="android:paddingLeft">@dimen/padding_narrow</item>
        <item name="android:paddingRight">@dimen/padding_narrow</item>
        <item name="android:textColor">@color/text_title_dark</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="Text.Title.Caps">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.Title.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="Text.Title.Small.Caps">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.DrawerItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">#fff</item>
    </style>


    <style name="Text.Contacts" parent="@style/Text.Title">
        <item name="android:textColor">@color/text_title_dark</item>
        <item name="android:paddingLeft">@dimen/padding_narrow</item>
        <item name="android:paddingRight">@dimen/padding_narrow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/padding_extra_narrow</item>
    </style>
    <style name="Text.Contacts.Value" parent="@style/Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="SpinnerWithoutArrow" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="actionMenuTextColor">@color/primary_blue</item>
        <item name="android:minHeight">0dp</item>
        <item name="titleMargins">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ToolBarTitleStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Text.Title.Shift" parent="@style/Text.Title">
        <item name="android:drawableBottom">@drawable/title_underline</item>
        <item name="android:drawablePadding">@dimen/padding_extra_narrow</item>
        <item name="android:paddingLeft">@dimen/padding_narrow</item>
        <item name="android:paddingRight">@dimen/padding_narrow</item>
        <item name="android:textColor">@color/text_title_dark</item>
        <item name="android:textSize">@dimen/textMedium</item>
